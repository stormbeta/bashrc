#NOTES:
#  Settings paths to identity files breaks agent forwarding if config is shared on target

ForwardAgent yes
PreferredAuthentications publickey,password,keyboard-interactive

# Reuse Exisiting Connections if available
ControlMaster auto
ControlPath ~/.ssh/cm/%h_%p_%r

Host github
  Hostname github.com
  User git

Host core-01
  HostName 192.168.97.131
  User core
  Port 22
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile /Users/jason/.vagrant.d/insecure_private_key
  IdentitiesOnly yes
  LogLevel FATAL
  ForwardAgent yes

