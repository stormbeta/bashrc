#NOTES:
#  Settings paths to identity files breaks agent forwarding if config is shared on target

ForwardAgent yes
PreferredAuthentications publickey,password,keyboard-interactive

# Reuse Exisiting Connections if available
ControlMaster auto
ControlPath ~/.ssh/cm/%h_%p_%r

Host jmillerpc
  User jmiller
  Hostname jmillerpc.e.ecovate.com
  ExitOnForwardFailure yes
  IdentityFile ~/.ssh/readytalk
  IdentitiesOnly yes

Host forinf2
  User jmiller
  Hostname forinf2.ecovate.com

Host macmini1
  User jmiller
  Hostname macmini1.e.ecovate.com

Host squeezebuild*
  User jmiller
  Hostname %h.e.ecovate.com

# Set defaults for all work machines.
Host *.ecovate.com *.readytalk.com
  User jmiller
  ForwardAgent  yes
  ExitOnForwardFailure yes

Host git
Hostname git.ecovate.com
User git

Host stash
Hostname stash.ecovate.com
User git

Host github
  Hostname github.com
  User git

Host 1900.readytalk.com
  User jmiller
  DynamicForward 8081
