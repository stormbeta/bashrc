#NOTES:
#  Settings paths to identity files breaks agent forwarding if config is shared on target

ForwardAgent yes
PreferredAuthentications publickey,password,keyboard-interactive

# Reuse Exisiting Connections if available
ControlMaster auto
ControlPath ~/.ssh/cm/%h_%p_%r

# Set defaults for all work machines.
Host *.ecovate.com *.readytalk.com
  User jmiller
  ForwardAgent  yes
  ExitOnForwardFailure yes

Host github
  Hostname github.com
  User git

Host 1900.readytalk.com
  User jmiller
  DynamicForward 8081
