root = true

[*]
indent_style = space
indent_size  = 2
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.java]
indent_size = 4

[*.xml]
indent_size = 4

[Makefile]
indent_style = tab

[*.gradle]
indent_size = 4

[Jenkinsfile]
indent_size = 2

[Jenkinsfile.*]
indent_size = 2

[*.py]
indent_size = 4
