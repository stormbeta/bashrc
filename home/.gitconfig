[user]
  name = Jason Miller
  email = stormbeta@gmail.com

[github]
  user = stormbeta

[web]
  browser = google-chrome

[push]
  default = current

[remote]
  pushdefault = origin

[checkout]
  defaultRemote = origin

[hub]
  protocol = https

[credential]
  helper = osxkeychain

[alias]
  ;promote = ~/bin/git-promote
  ;wtf     = ~/bin/git-wtf
  ;rank-contributers = ~/bin/git-rank-contributers

  co = checkout
  c  = commit
  st = status -sb
  br = branch
  pr = pull --rebase

  fpull = "!f() { git fetch --all && git pull $@; }; f"
  push-local = "!f() { local target=$1; shift; git push . HEAD:$target $@; }; f"

  ; checkout to new branch with tracking auto-enabled
  cb = "!f() { local target=$1; git checkout -b $1; git branch -u origin/$1; }; f"

  # Diffs
  sdiff = diff --short-stat
  ndiff = diff --name-only
  count = !git shortlog -sn

  # Logs
  plog  = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  logme = log --author='Jason.*Miller'
  blog  = log --graph --decorate --pretty=oneline --abbrev-commit

  # Safeguards
  rebase = rebase -i

  # Tools from mklich
  oldest-ancestor = !bash -c 'diff -u <(git rev-list --first-parent \"${1:-master}\") <(git rev-list --first-parent \"${2:-HEAD}\") | sed -ne \"s/^ //p\" | head -1' -
  diverges = !bash -c 'git rev-parse $(diff <(git log --pretty=oneline ${1}) <(git log --pretty=oneline ${2}) | tail -1 | cut -c 3-42)^'

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = green
  changed = yellow
  untracked = red

[merge]
  # Include summaries of merged commits in newly created merge commit messages
  tool = vimdiff
  log = true

[core]
  excludesfile = ~/.gitignore
  editor = nvim

[apply]
  whitespace = nowarn

[mergetool]
  keepBackup = false

[difftool]
  prompt = false

[diff]
  mnemonicprefix = true
  renames = copies
  wsErrorHighlight = all

[stash]
  showPatch = true

[rebase]
  autostash = true

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
